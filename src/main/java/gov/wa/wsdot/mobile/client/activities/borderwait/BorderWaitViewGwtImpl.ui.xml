<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget"
    xmlns:wsdot="urn:import:gov.wa.wsdot.mobile.client.widget.tabbar">
    
    <ui:with field="app" type="gov.wa.wsdot.mobile.client.css.AppBundle" />

    <mgwt:panel.flex.RootFlexPanel>

        <mgwt:header.HeaderPanel>
	        <mgwt:header.HeaderButton ui:field="backButton" backButton="true" text="Home" />
	        <mgwt:header.HeaderTitle>Border Wait</mgwt:header.HeaderTitle>
        </mgwt:header.HeaderPanel>
        
        <mgwt:tabbar.TabPanel>
            <mgwt:tabs>
                <mgwt:tabbar.Tab>
                    <mgwt:button>
                        <wsdot:NorthboundTabBarButton />
                    </mgwt:button>
                    <mgwt:widget>
                        <mgwt:panel.pull.PullPanel ui:field="northboundPullToRefresh">
	                        <g:FlowPanel>
	                            <mgwt:progress.ProgressBar ui:field="northboundProgressBar" visible="false" />
	                            <mgwt:list.celllist.CellList ui:field="northbound" />
	                        </g:FlowPanel>
                        </mgwt:panel.pull.PullPanel>
                    </mgwt:widget>
                </mgwt:tabbar.Tab>
            </mgwt:tabs>
            
            <mgwt:tabs>
                <mgwt:tabbar.Tab>
                    <mgwt:button>
                        <wsdot:SouthboundTabBarButton />
                    </mgwt:button>
                    <mgwt:widget>
                        <mgwt:panel.pull.PullPanel ui:field="southboundPullToRefresh">
	                        <g:FlowPanel>
	                            <mgwt:progress.ProgressBar ui:field="southboundProgressBar" visible="false" />
	                            <mgwt:list.celllist.CellList ui:field="southbound" />
	                        </g:FlowPanel>
                        </mgwt:panel.pull.PullPanel>
                    </mgwt:widget>
                </mgwt:tabbar.Tab>
            </mgwt:tabs>
        </mgwt:tabbar.TabPanel>
        
    </mgwt:panel.flex.RootFlexPanel>

</ui:UiBinder>