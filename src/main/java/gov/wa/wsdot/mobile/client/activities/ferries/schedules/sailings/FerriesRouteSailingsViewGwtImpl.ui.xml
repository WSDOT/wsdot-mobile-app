<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget"
    xmlns:wsdot="urn:import:gov.wa.wsdot.mobile.client.widget.tabbar">
    
    <ui:with field="app" type="gov.wa.wsdot.mobile.client.css.AppBundle" />

    <ui:style>
        .progressIndicatorPanel {
            display: -webkit-box;
            -webkit-box-pack: center;
            max-width: 100%;
        }
        .progressIndicator {
            width: 0px;
            padding: 30px 0 20px 0;
        }
    </ui:style>
    
	<mgwt:panel.flex.RootFlexPanel>
		<mgwt:header.HeaderPanel>
			<mgwt:button.image.PreviousitemImageButton ui:field="backButton" />
			<mgwt:panel.flex.FlexSpacer />
			<mgwt:header.HeaderTitle>Sailings</mgwt:header.HeaderTitle>
			<mgwt:panel.flex.FlexSpacer />
			<mgwt:button.image.NotimportantImageButton ui:field="starButton" />
		</mgwt:header.HeaderPanel>
		
        <mgwt:tabbar.TabPanel ui:field="tabPanel" height="100%">
            <mgwt:tabs>
                <mgwt:tabbar.Tab>
                    <mgwt:button>
                        <wsdot:SailingsTabBarButton />
                    </mgwt:button>
                    <mgwt:widget>
                        <mgwt:panel.flex.RootFlexPanel>
						<mgwt:panel.scroll.ScrollPanel ui:field="sailingsPanel" scrollingEnabledX="false">        	
			        	    <g:FlowPanel>
                                <g:HTMLPanel styleName="{style.progressIndicatorPanel}">
                                    <mgwt:progress.ProgressIndicator ui:field="progressIndicator" visible="false" addStyleNames="{style.progressIndicator}" />
                                </g:HTMLPanel>
				            	<mgwt:list.celllist.CellList ui:field="sailingsCellList" />
			            	</g:FlowPanel>
				        </mgwt:panel.scroll.ScrollPanel>
				        </mgwt:panel.flex.RootFlexPanel>
                    </mgwt:widget>
                </mgwt:tabbar.Tab>
            </mgwt:tabs>
            <mgwt:tabs>
                <mgwt:tabbar.Tab>
                    <mgwt:button>
                        <wsdot:WarningTabBarButton />
                    </mgwt:button>
                    <mgwt:widget>
                        <mgwt:panel.flex.RootFlexPanel>
                        <mgwt:panel.scroll.ScrollPanel ui:field="alertsPanel" scrollingEnabledX="false">         
                            <mgwt:list.celllist.CellList ui:field="alertsCellList" />
                        </mgwt:panel.scroll.ScrollPanel>
                        </mgwt:panel.flex.RootFlexPanel>
                    </mgwt:widget>
                </mgwt:tabbar.Tab>
            </mgwt:tabs>
                        
        </mgwt:tabbar.TabPanel>
                        
	</mgwt:panel.flex.RootFlexPanel>
    
</ui:UiBinder>