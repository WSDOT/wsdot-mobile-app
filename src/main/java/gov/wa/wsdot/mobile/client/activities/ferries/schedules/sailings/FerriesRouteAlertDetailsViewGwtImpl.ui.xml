<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget"
    xmlns:wsdot="urn:import:gov.wa.wsdot.mobile.client.widget">
    
    <ui:with field="app" type="gov.wa.wsdot.mobile.client.css.AppBundle" />

    <ui:style>
        .htmlPanel {
            background-color: white;
            padding: 12px;
        }
        .headerTitle {
            width: 180px;
            margin-left: -85px;
        }
        .publishDate {
            font-size: small;
            font-weight: normal;
            margin-bottom: 14px;
        }
        .alertTitle {
            font-size: small;
            font-weight: bold;
            margin-bottom: 7px;
        }
        .alertText {
            font-size: small;
            font-weight: normal;
        }
        .alertText > p {
            margin: 1em 0;
        }
    </ui:style>
    
	<mgwt:LayoutPanel>
		<mgwt:HeaderPanel>
			<mgwt:left>
				<mgwt:HeaderButton ui:field="backButton" backButton="true" text="Back" />
			</mgwt:left>
			<mgwt:center>
				<g:HTML ui:field="title" styleName="{style.headerTitle}" />
			</mgwt:center>
		</mgwt:HeaderPanel>
		
        <mgwt:ScrollPanel scrollingEnabledX="false">
        	<g:HTMLPanel styleName="{style.htmlPanel}">
        	    <g:HTML ui:field="publishDate" styleName="{style.publishDate}" />
        	    <g:HTML ui:field="alertTitle" styleName="{style.alertTitle}" />
                <g:HTML ui:field="alertText" styleName="{style.alertText}" />
            </g:HTMLPanel>
        </mgwt:ScrollPanel>
		
	</mgwt:LayoutPanel>
    
    
</ui:UiBinder>