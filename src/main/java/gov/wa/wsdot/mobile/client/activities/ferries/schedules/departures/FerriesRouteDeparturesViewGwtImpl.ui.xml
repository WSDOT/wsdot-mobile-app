<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">
    
    <ui:with field="app" type="gov.wa.wsdot.mobile.client.css.AppBundle" />

    <ui:style>
        .timesHeader {
            display: -webkit-box;
            -webkit-box-orient: horizontal;
            padding: 20px 0 6px 0;
        }

        .departingHeader {
            -webkit-box-flex: 1;
            font-size: small;
            font-weight: bold;
            padding-left: 12px;
        }

        .arrivingHeader {
            -webkit-box-flex: 1;
            font-size: small;
            font-weight: bold;
            text-align: right;
            padding-right: 12px;
        }
    </ui:style>
    
	<mgwt:panel.flex.RootFlexPanel>
		<mgwt:header.HeaderPanel>
			<mgwt:header.HeaderButton ui:field="backButton" backButton="true" text="Back" />
			<mgwt:header.HeaderTitle ui:field="title" />
		</mgwt:header.HeaderPanel>
		
        <mgwt:panel.scroll.ScrollPanel ui:field="scrollPanel" scrollingEnabledX="false">
        	<g:FlowPanel>
        	    <mgwt:progress.ProgressBar ui:field="progressBar" visible="false" />
        	    
                <mgwt:list.widgetlist.WidgetList ui:field="widgetList" round="true">
                   <mgwt:input.listbox.MListBox ui:field="daysOfWeek" />
                </mgwt:list.widgetlist.WidgetList>
        	    
                <g:HTMLPanel styleName="{style.timesHeader}">
                    <div class="{style.departingHeader}">Departing</div>
                    <div class="{style.arrivingHeader}">Arriving</div>
                </g:HTMLPanel>
                
            	<mgwt:list.celllist.CellList ui:field="cellList" />
            </g:FlowPanel>
        </mgwt:panel.scroll.ScrollPanel>
		
	</mgwt:panel.flex.RootFlexPanel>
    
</ui:UiBinder>