<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget"
    xmlns:wsdot="urn:import:gov.wa.wsdot.mobile.client.widget.tabbar">
    
    <ui:with field="app" type="gov.wa.wsdot.mobile.client.css.AppBundle" />

    <ui:style>
        .buttonPanel {
            display: -webkit-box;
            -webkit-box-orient: horizontal;
            -webkit-box-align: center;
            -webkit-box-pack: end;
            margin: 12px;
        }
    </ui:style>
    
    <mgwt:panel.flex.RootFlexPanel>

        <mgwt:header.HeaderPanel>
	        <mgwt:header.HeaderButton ui:field="backButton" backButton="true" text="Back" />
	        <mgwt:header.HeaderTitle ui:field="title" />
        </mgwt:header.HeaderPanel>

        <mgwt:tabbar.TabPanel ui:field="tabPanel">
            <mgwt:tabs>
                <mgwt:tabbar.Tab>
                    <mgwt:button>
                        <wsdot:CameraTabBarButton />
                    </mgwt:button>
                    <mgwt:widget>
        
				        <mgwt:panel.pull.PullPanel ui:field="cameraPullToRefresh">
							<g:FlowPanel>
				                <g:HTMLPanel styleName="{style.buttonPanel}">
				                    <mgwt:button.Button ui:field="starButton" styleName="{app.css.starButtonOff}" />
				                </g:HTMLPanel>
								<mgwt:list.celllist.CellList ui:field="cameraCellList" />
							</g:FlowPanel>
				        </mgwt:panel.pull.PullPanel>
        
                    </mgwt:widget>
                </mgwt:tabbar.Tab>
            </mgwt:tabs>

            <mgwt:tabs>
                <mgwt:tabbar.Tab>
                    <mgwt:button>
                        <wsdot:VideoTabBarButton />
                    </mgwt:button>
                    <mgwt:widget>

				        <mgwt:panel.pull.PullPanel ui:field="videoPullToRefresh">
				           <g:FlowPanel>
				               <mgwt:list.celllist.CellList ui:field="videoCellList" />
				           </g:FlowPanel>
				        </mgwt:panel.pull.PullPanel>                   
                        
                    </mgwt:widget>
                </mgwt:tabbar.Tab>
            </mgwt:tabs>
            
        </mgwt:tabbar.TabPanel>
            
    </mgwt:panel.flex.RootFlexPanel>

</ui:UiBinder>