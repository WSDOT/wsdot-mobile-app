<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0.3//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.0.3/distro-source/core/src/gwt-module.dtd">
<module rename-to="MobileApp">
	<inherits name="com.google.gwt.user.User" />
	<inherits name="com.google.gwt.json.JSON" />
	<inherits name="com.googlecode.mgwt.MGWT"/>
	<inherits name="com.googlecode.mgwt.linker.Linker" />
	<inherits name="com.google.gwt.maps.Maps" />
	<inherits name="com.google.code.gwt.database.Html5Database" />
	<inherits name='com.googlecode.gwtphonegap.PhoneGap' />
	
	<inherits name="gov.wa.wsdot.mobile.client.widget.image.LocalImageHolder"/>
	<inherits name="gov.wa.wsdot.mobile.client.widget.tabbar.resources.LocalImageHolder" />
	
	<!-- set the user agent to safari -> only webkit -->
	<set-property name="user.agent" value="safari" />
	
	<!-- Uncomment to use platform themes -->
	<inherits name="com.googlecode.mgwt.ui.client.theme.platform.Platform" />
	<!-- mgwt.os is only available when using the platform theme -->
	<!-- <set-property name="mgwt.os" value="android, ios" /> -->
	<set-property name="mgwt.os" value="ios" />
	  
	<set-property name="mgwt.formfactor" value="phone" />
	<set-property name="mgwt.density" value="mid,high,xhigh" />	
	
	<!-- here you can turn off css obfuscation -->
	<!-- <set-configuration-property name="mgwt.css" value="pretty" /> -->

	<entry-point class="gov.wa.wsdot.mobile.client.MobileAppEntryPoint" />
	
	<!-- <add-linker name="permutationmaplinker" /> -->
	<add-linker name="xsiframe" />

	<!-- <extend-configuration-property name="html5manifestlinker_files" value="./" /> -->
	<!-- <extend-configuration-property name="html5manifestlinker_files" value="index.html" /> -->
	<!-- <extend-configuration-property name="html5manifestlinker_files" value="logo.png" /> -->
	
	<source path="client"/>
	<source path="shared"/>
	
</module>